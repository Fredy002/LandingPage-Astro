---
import projects from "../../config/projects.json";
---

<section class="p-20">
  <h2 class="text-5xl font-bold my-5 text-center py-5">Projects</h2>

  {
    projects.map((project) => (
      <div class="flex flex-col md:flex-row text-center md:text-left">
        <div class="flex-1 p-4">
          <h2 class="text-2xl font-bold my-4">{project.title}</h2>
          <p class="my-2">{project.description}</p>
          <button class="bg-indigo-500 px-3 py-2 rounded">More info</button>
        </div>
        <div class="flex-1">
          <img src={project.image} class="w-72 m-auto" />
        </div>
      </div>
    ))
  }
</section>
